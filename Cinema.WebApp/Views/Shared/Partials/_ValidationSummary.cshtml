@{
    var hasErrors = ViewData.ModelState?.Values.Any(v => v.Errors.Any()) ?? false;
}

@if (hasErrors)
{
    <div class="custom-error-alert animate__animated animate__fadeIn" role="alert">
        <div class="d-flex align-items-center mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="me-2" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.964 0L.165 13.233c-.457.778.091 1.767.982 1.767h13.706c.89 0 1.438-.99.982-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1-2.002 0 1 1 0 0 1 2.002 0z"/>
            </svg>
            <strong class="fs-5">Please fix the following errors:</strong>
        </div>
        <ul class="mb-0 ps-4">
            @foreach (var modelState in ViewData.ModelState.Values)
            {
                foreach (var error in modelState.Errors)
                {
                    <li class="mb-1">@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}