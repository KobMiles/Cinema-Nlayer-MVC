@model Cinema.BLL.DTOs.Users.UserDetailsDto

@{
    ViewData["Title"] = "User Profile";
}

<div class="container my-4">
    <div class="row">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body text-center">
                    <img src="https://via.placeholder.com/150" alt="Profile" class="rounded-circle img-fluid mb-3" />
                    <h4>@Model.UserName</h4>
                    <p class="text-muted">@Model.Email</p>
                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <p class="text-muted">@Model.PhoneNumber</p>
                    }
                    <a href="#" class="btn btn-danger mt-3">Edit Profile</a>
                    <a href="#" class="btn btn-outline-danger mt-3">Change Password</a>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Your Tickets</h5>
                </div>
                <div class="card-body">
                    @if (Model.Tickets.Any())
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ticket Number</th>
                                    <th>Session ID</th>
                                    <th>Seat ID</th>
                                    <th>Payment ID</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ticket in Model.Tickets)
                                {
                                    <tr>
                                        <td>@ticket.Id</td>
                                        <td>@ticket.TicketNumber</td>
                                        <td>@ticket.SessionId</td>
                                        <td>@ticket.SeatId</td>
                                        <td>@ticket.PaymentId</td>
                                        <td>
                                            <a href="#" class="btn btn-sm btn-info">Details</a>
                                            <a href="#" class="btn btn-sm btn-outline-danger">Cancel</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">You have no purchased tickets yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>