@model Cinema.BLL.DTOs.Sessions.SessionUpdateDto

@{
    ViewData["Title"] = "Edit Session";
    string ShortDateTime(DateTime dt) => dt.ToString("yyyy-MM-ddTHH:mm");
}

<div class="container my-5 d-flex justify-content-center session-edit-page">
    <div class="edit-card">

        <h2 class="text-danger text-center mb-4">@ViewData["Title"]</h2>

        <form asp-action="Edit" method="post" class="needs-validation">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
            <input asp-for="Id" type="hidden" />

            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <label asp-for="MovieId" class="form-label fw-semibold">
                        <i class="bi bi-film me-1"></i>Movie
                    </label>
                    <select asp-for="MovieId" class="form-select" asp-items="ViewBag.MovieList"></select>
                    <span asp-validation-for="MovieId" class="text-danger small"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="HallId" class="form-label fw-semibold">
                        <i class="bi bi-building me-1"></i>Hall
                    </label>
                    <select asp-for="HallId" class="form-select" asp-items="ViewBag.HallList"></select>
                    <span asp-validation-for="HallId" class="text-danger small"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="StartTime" class="form-label fw-semibold">
                        <i class="bi bi-clock me-1"></i>Start&nbsp;Time
                    </label>
                    <input asp-for="StartTime"
                           class="form-control"
                           type="datetime-local"
                           step="60"
                           value="@ShortDateTime(Model.StartTime)" />
                    <span asp-validation-for="StartTime" class="text-danger small"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="TicketPrice" class="form-label fw-semibold">
                        <i class="bi bi-currency-dollar me-1"></i>Ticket&nbsp;Price
                    </label>
                    <input asp-for="TicketPrice"
                           class="form-control"
                           type="number"
                           step="0.01" />
                    <span asp-validation-for="TicketPrice" class="text-danger small"></span>
                </div>
            </div>

            <div class="d-flex flex-wrap gap-3 mt-4">
                <button type="submit" class="btn btn-danger flex-grow-1">
                    <i class="bi bi-save me-1"></i>Save&nbsp;Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-danger flex-grow-1">
                    Cancel
                </a>
            </div>
        </form>

    </div>
</div>
